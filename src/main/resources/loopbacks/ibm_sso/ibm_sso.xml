<configuration>
	<loopback name="ibm_sso" port="8003">
		<responseDelay>
			<min>500</min>
			<max>1000</max>
		</responseDelay>
		<templatePath>loopbacks/ibm_sso/template/</templatePath>

		<selector>
			<matcher scope="URL">^HEAD\s/login/openid</matcher>
			<template>200_OpenIdXRDS.vm</template>
		</selector>
		<selector>
			<matcher scope="URL">^GET\s/sps/openidip/openid/sso.*</matcher>
			<template>200ok.vm</template>
		</selector>
		<selector>
			<matcher scope="URL">^GET\s/login/openid$</matcher>
			<template>200_OpenIdXRDS.vm</template>
		</selector>
		<selector>
			<matcher scope="URL">^GET\s/login/openid/.+</matcher>
			<template>200_OpenIdXRDS.vm</template>
		</selector>
		<selector>
			<matcher scope="URL">^GET\s/login/openid[?].*</matcher>
			<template>200ok.vm</template>
			<requestCallback method="GET" host="local.ibm.com"
							 path="/openid/partner/finish?openid.ns=http%3A%2F%2Fspecs.openid.net%2Fauth%2F2.0&amp;openid.op_endpoint=http%3A%2F%2Flocal.ibm.com%2Flogin%2Fopenid&amp;openid.claimed_id=http%3A%2F%2Flocal.ibm.com%2Flogin%2Fopenid%2Fwww.ibm.com%2Fmarc-antoine.bibeau%2Bibmtest1%40appdirect.com&amp;openid.response_nonce=2015-05-27T16%3A59%3A32Z0&amp;openid.mode=id_res&amp;openid.identity=http%3A%2F%2Flocal.ibm.com%2Flogin%2Fopenid%2Fwww.ibm.com%2Fmarc-antoine.bibeau%2Bibmtest1%40appdirect.com&amp;openid.return_to=http%3A%2F%2Flocal.ibm.com%2Fopenid%2Fpartner%2Ffinish&amp;openid.assoc_handle=d7be1a82d5f0767&amp;openid.signed=op_endpoint%2Cclaimed_id%2Cidentity%2Creturn_to%2Cresponse_nonce%2Cassoc_handle%2Cns.ext1%2Cext1.mode%2Cext1.type.email%2Cext1.value.email%2Cext1.type.verifiedEmail%2Cext1.value.verifiedEmail%2Cext1.type.firstName%2Cext1.value.firstName%2Cext1.type.lastName%2Cext1.value.lastName%2Cext1.type.organization%2Cext1.value.organization%2Cext1.type.billingType%2Cext1.value.billingType&amp;openid.sig=YaexCDWt5KE7Z2uCOCM%2FAAonffz1U0A0BXOt9744XsM%3D&amp;openid.ns.ext1=http%3A%2F%2Fopenid.net%2Fsrv%2Fax%2F1.0&amp;openid.ext1.mode=fetch_response&amp;openid.ext1.type.email=http%3A%2F%2Faxschema.org%2Fcontact%2Femail&amp;openid.ext1.value.email=marc-antoine.bibeau%2Bibmtest1%40appdirect.com&amp;openid.ext1.type.verifiedEmail=http%3A%2F%2Fwww.ibm.com%2Faxschema%2Fidaas%2Fverified_email&amp;openid.ext1.value.verifiedEmail=marc-antoine.bibeau%2Bibmtest1%40appdirect.com&amp;openid.ext1.type.firstName=http%3A%2F%2Faxschema.org%2FnamePerson%2Ffirst&amp;openid.ext1.value.firstName=Marc&amp;openid.ext1.type.lastName=http%3A%2F%2Faxschema.org%2FnamePerson%2Flast&amp;openid.ext1.value.lastName=Bibeau&amp;openid.ext1.type.organization=http%3A%2F%2Fwww.ibm.com%2Faxschema%2Fwebidentity%2Forganization&amp;openid.ext1.value.organization=AppDirect&amp;openid.ext1.type.billingType=http%3A%2F%2Fwww.ibm.com%2Faxschema%2Fmarketplace%2Fbillingtype&amp;openid.ext1.value.billingType=1">
